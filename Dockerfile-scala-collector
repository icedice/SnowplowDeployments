FROM scala-alpine
LABEL maintainer="Asger Bachmann <asger.g.bachmann@jp.dk>"

ENV VERSION="0.13.0"

COPY ./snowplow/2-collectors/scala-stream-collector/kinesis/target/scala-2.11/snowplow-stream-collector-kinesis-${VERSION}.jar /app/snowplow-stream-collector-kinesis-${VERSION}.jar
COPY ./scala-collector/configuration/config /app/configuration/config

CMD java -jar /app/snowplow-stream-collector-kinesis-${VERSION}.jar --config /app/configuration/config
